---
import Layout from "../layouts/BaseLayout.astro";
import Hero from "@components/Hero.astro";
import Services from "@components/Services.astro";
import About from "@components/About.astro";
import SEO from "@components/SEO.astro";
import WhyChooseUs from "@components/WhyChooseUs.astro";
import Stats from "@components/Stats.astro";
import CTA from "@components/CTA.astro";
import Quote from "@components/Quote.astro";
import Testimonials from "@components/Testimonials.astro";
import Review from "@components/Review.astro";
import FAQ from "@components/FAQ.astro";
import WhatWeDo from "@components/WhatWeDo.astro";
import Pricing from "@components/Pricing.astro";
---

<!-- TODO: Update profession/content to realtors -->
<Layout title="Web Dev" description="">
  <Hero />
  <WhatWeDo />
  <!-- <Services /> -->
  <SEO />
  <WhyChooseUs />
  <Stats />
  <FAQ />
  <Testimonials
    topper="Reviews"
    title="What People Say About Us"
    testimonialsButton
    buttonText="Our Reviews"
    buttonLink="/more/reviews"
  >
    <Review
      profileImg="/assets/svgs/profile-woman.svg"
      text="They gave us an estimate that was 30% less than the 2 other companies we got quotes from, and they were able to start work right away. The crew was very friendly, professional, and hard-working. They finished the job in one day! It looks fantastic! We are very happy with the work they did."
      name="Melody Y."
      title="Homeowner"
    />
    <Review
      profileImg="/assets/svgs/profile.svg"
      text="I called Coppertop Construction to fix my leaking roof, and they were able to come out that same day, within 2 hours of me calling for an estimate! The crew that came was very friendly and polite. They finished the job in 1 day and did a great job cleaning up after themselves. This company is very reliable, and I would highly recommend them!"
      name="Roger P."
      title="Homeowner"
    />
    <Review
      profileImg="/assets/svgs/profile-woman.svg"
      text="We were extremely pleased with the service we received from Coppertop Construction when we hired them to re-roof our home. They worked extra hard to ensure that we were completely satisfied with the results."
      name="Kimmie M."
      title="Homeowner"
    />
  </Testimonials>
  <Pricing />
  <CTA />
</Layout>
