---
import { cn } from "../utils/utils.ts";

// Styles
const hero =
  "py-[clamp(3.75rem,7.82vw,6.25rem)] px-4 pt-[clamp(12.5rem,31.95vw,18.75rem)] relative z-[1] sm:pb-0";
const container =
  "w-full max-w-[80rem] m-auto flex justify-center items-center flex-col gap-[clamp(3.75rem,13vw,11.25rem)] sm:items-start";
const content =
  "text-left w-full max-w-[48.75rem] flex flex-col items-start sm:ml-0";
const topper =
  "text-[clamp(0.8125rem,1.5vw,1rem)] leading-[1.2em] font-bold tracking-widest text-center uppercase mb-1 text-primary flex justify-center items-center gap-2 relative";
const chevron = "fill-primary w-12 h-auto";
const title =
  "text-bodyTextColorWhite text-[clamp(2.4375rem,6.4vw,3.8125rem)] font-bold leading-[1.2em] max-w-full mb-20 relative";
const titleUnderline =
  "before:content-[''] before:absolute before:block before:h-[0.0625em] before:w-[1.515em] before:bg-secondary before:opacity-100 before:bottom-[-0.4em] before:left-1/2 before:transform before:-translate-x-1/2";
const buttonSolid =
  "leading-[clamp(2.875rem,5.5vw,3.5rem)] h-[initial] rounded m-0 text-base no-underline font-bold text-bodyTextColorWhite py-0 px-6 bg-primary inline-block relative z-[1]";
const buttonSolidBefore =
  "before:content-[''] before:absolute before:block before:h-full before:rounded before:w-0 before:bg-headerColor before:opacity-100 before:top-0 before:left-0 before:z-[-1] before:transform before:transition-all before:duration-300 before:hover:w-full";
const cardGroup =
  "m-0 p-0 w-full grid grid-cols-12 gap-[clamp(1rem,2.3vw,1.25rem)]";
const item =
  "w-full text-left list-none m-0 p-[clamp(1.5rem,3vw,2rem)] bg-white dark:bg-medium shadow-lg box-border col-span-12 row-span-1 flex flex-col items-start justify-center relative z-[1] sm:col-span-4";
const icon = "w-12 h-auto mb-10 dark:grayscale dark:brightness-[1000%]";
const h3 =
  "text-[clamp(1.25rem,2.5vw,1.5625rem)] leading-[1.2em] font-bold mb-4 text-headerColor dark:text-bodyTextColorWhite";
const itemText =
  "text-[clamp(0.875rem,1.5vw,1rem)] leading-[1.5em] max-w-[28.125rem] m-0 p-0 text-bodyTextColor dark:text-bodyTextColorWhite";
const background =
  "w-full h-[55%] block absolute top-0 left-0 z-[-2] dark:bg-black sm:h-[87%] lg:[background:url('https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/People/meeting7.jpg')] lg:bg-cover lg:bg-center lg:bg-no-repeat lg:bg-fixed";
const backgroundBefore =
  "before:content-[''] before:w-full before:h-full before:bg-[#111926] before:opacity-80 before:absolute before:block before:top-0 before:left-0 before:z-[1] before:pointer-events-none sm:before:[background:linear-gradient(90deg,#111926_21.41%,rgba(17,25,38,0.72)34.98%,rgba(17,25,38,0)62.53%)] sm:before:opacity-100";
const img =
  "absolute top-0 left-0 h-full w-full object-cover object-top dark:opacity-50";
---

<section id="hero-1618" class={cn(hero)}>
  <div class={cn(container)}>
    <div class={cn(content)}>
      <span class={cn(topper)}>
        <svg
          class={cn(chevron)}
          width="49"
          height="15"
          viewBox="0 0 49 15"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <g opacity="0.7">
            <path
              d="M0.621948 7.49889L6.40262 15L10.343 15L4.56231 7.49889L10.343 -4.2492e-07L6.40262 -2.52681e-07L0.621948 7.49889Z"
              fill="var(--chevronColor)"></path>
            <path
              d="M7.62195 7.49889L13.4026 15L17.343 15L11.5623 7.49889L17.343 -4.2492e-07L13.4026 -2.52681e-07L7.62195 7.49889Z"
              fill="var(--chevronColor)"></path>
            <path
              d="M14.7789 7.49889L20.5596 15L24.5 15L18.7193 7.49889L24.5 -4.2492e-07L20.5596 -2.52681e-07L14.7789 7.49889Z"
              fill="var(--chevronColor)"></path>
            <path
              d="M22.7789 7.49889L28.5596 15L32.5 15L26.7193 7.49889L32.5 -4.2492e-07L28.5596 -2.52681e-07L22.7789 7.49889Z"
              fill="var(--chevronColor)"></path>
            <path
              d="M30.7789 7.49889L36.5596 15L40.5 15L34.7193 7.49889L40.5 -4.2492e-07L36.5596 -2.52681e-07L30.7789 7.49889Z"
              fill="var(--chevronColor)"></path>
            <path
              d="M38.7789 7.49889L44.5596 15L48.5 15L42.7193 7.49889L48.5 -4.2492e-07L44.5596 -2.52681e-07L38.7789 7.49889Z"
              fill="var(--chevronColor)"></path>
          </g>
        </svg>
        Plan for A secure future
        <svg
          class={cn(chevron)}
          width="49"
          height="15"
          viewBox="0 0 49 15"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <g opacity="0.7">
            <path
              d="M48.3781 7.49889L42.5974 15L38.657 15L44.4377 7.49889L38.657 -4.2492e-07L42.5974 -2.52681e-07L48.3781 7.49889Z"
              fill="var(--chevronColor)"></path>
            <path
              d="M41.3781 7.49889L35.5974 15L31.657 15L37.4377 7.49889L31.657 -4.2492e-07L35.5974 -2.52681e-07L41.3781 7.49889Z"
              fill="var(--chevronColor)"></path>
            <path
              d="M34.2211 7.49889L28.4404 15L24.5 15L30.2807 7.49889L24.5 -4.2492e-07L28.4404 -2.52681e-07L34.2211 7.49889Z"
              fill="var(--chevronColor)"></path>
            <path
              d="M26.2211 7.49889L20.4404 15L16.5 15L22.2807 7.49889L16.5 -4.2492e-07L20.4404 -2.52681e-07L26.2211 7.49889Z"
              fill="var(--chevronColor)"></path>
            <path
              d="M18.2211 7.49889L12.4404 15L8.50004 15L14.2807 7.49889L8.50004 -4.2492e-07L12.4404 -2.52681e-07L18.2211 7.49889Z"
              fill="var(--chevronColor)"></path>
            <path
              d="M10.2211 7.49889L4.4404 15L0.500041 15L6.28071 7.49889L0.500042 -4.2492e-07L4.4404 -2.52681e-07L10.2211 7.49889Z"
              fill="var(--chevronColor)"></path>
          </g>
        </svg>
      </span>
      <h1 class={cn(title, titleUnderline)}>
        Elevate Your Performance With Our Leading-Edge Consulting Solutions
      </h1>
      <a href="" class={cn(buttonSolid, buttonSolidBefore)}
        >Request Appointment</a
      >
    </div>
    <ul class={cn(cardGroup)}>
      <li class={cn(item)}>
        <img
          class={icon}
          loading="lazy"
          decoding="async"
          src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Icons/check-circle.svg"
          alt="icon"
          width="48"
          height="48"
        />
        <h3 class={cn(h3)}>100% Success Rate</h3>
        <p class={cn(itemText)}>
          We provide some of the finest quality, most responsive and reliable,
          and cost effective services and solutions.
        </p>
      </li>
      <li class={cn(item)}>
        <img
          class={icon}
          loading="lazy"
          decoding="async"
          src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Icons/speedometer.svg"
          alt="icon"
          width="48"
          height="48"
        />
        <h3 class={cn(h3)}>Expert Legal Services</h3>
        <p class={cn(itemText)}>
          We provide some of the finest quality, most responsive and reliable,
          and cost effective services and solutions.
        </p>
      </li>
      <li class={cn(item)}>
        <img
          class={icon}
          loading="lazy"
          decoding="async"
          src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Icons/Like.svg"
          alt="icon"
          width="48"
          height="48"
        />
        <h3 class={cn(h3)}>Highly Recommend</h3>
        <p class={cn(itemText)}>
          We provide some of the finest quality, most responsive and reliable,
          and cost effective services and solutions.
        </p>
      </li>
    </ul>
  </div>

  <!-- Background Image, there's a background image in the CSS for the parallax effect you'll need to change as well if you swap out our images -->
  <picture class={cn(background, backgroundBefore)}>
    <source
      media="(max-width: 600px)"
      srcset="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/People/meeting7-m.jpeg"
    />
    <source
      media="(min-width: 601px)"
      srcset="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/People/meeting7.jpg"
    />
    <img
      class={cn(img)}
      decoding="async"
      src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/People/meeting7.jpg"
      alt="meeting"
      width="2250"
      height="1500"
      aria-hidden="true"
    />
  </picture>
</section>
