---
import { cn } from "@utils/utils";
import Contact1105 from "./contact-1105.astro";
import Contact1105Section from "./contact-1105-section.astro";
import Contact1105Input from "./contact-1105-input.astro";
import Contact1105Info from "./contact-1105-info.astro";
import Contact1105InfoLi from "./contact-1105-infoOption.astro";
import client from "@data/client.json";

interface Props {}

const {} = Astro.props;

// Styles
---

<Contact1105Section topper="Contact Us" title="Send a Message">
  <Contact1105
    slot="contact"
    id="form-1105"
    name="Contact Form"
    buttonText="Send Message"
    action="https://formspree.io/f/xpwlpezl"
  >
    <input
      type="hidden"
      name="_subject"
      value="Someone Contacted You on Klick Foundry"
    />
    <Contact1105Input
      label="Name"
      type="text"
      id="name-1105"
      name="name"
      placeholder="Name"
    />
    <Contact1105Input
      label="Email"
      type="email"
      id="email-1105"
      name="email"
      placeholder="Email"
    />
    <Contact1105Input
      label="Phone"
      type="phone"
      id="phone-1105"
      name="phone"
      placeholder="Phone"
    />
    <Contact1105Input
      textarea
      label="Message"
      id="message-1105"
      name="message"
      placeholder="Write message..."
    />
  </Contact1105>
  <Contact1105Info slot="info" header="Phone" src="/assets/svgs/mech-phone.svg">
    <Contact1105InfoLi
      phone
      href={client.phoneForTel}
      info={client.phoneFormatted}
    />
  </Contact1105Info>
  <Contact1105Info slot="info" header="Email" src="/assets/svgs/mech-email.svg">
    <Contact1105InfoLi email href={client.email} info={client.email} />
  </Contact1105Info>
  <Contact1105Info slot="info" header="Address" src="/assets/svgs/mech-pin.svg">
    <Contact1105InfoLi
      href=""
      info={client.address.lineOne + ", " + client.address.lineTwo}
    />
  </Contact1105Info>
</Contact1105Section>
